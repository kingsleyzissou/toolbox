{
  "name": "osbuild",
  "description": "osbuild developer image",
  "version": "0.0.1",
  "modules": [],
  "groups": [],
  "customizations": {
    "hostname": "lima-centos",
    "timezone": {
      "timezone": "Europe/Dublin"
    },
    "services": {
      "enabled": [
        "cockpit.socket",
        "osbuild-composer.socket"
      ]
    },
    "files": [
      {
        "path": "/etc/pam.d/cockpit",
        "mode": "0644",
        "user": "root",
        "group": "root",
        "data": "\n auth       required   pam_sepermit.so\n auth       include    system-auth\n account    include    system-auth\n session    include    system-auth\n"
      },
      {
        "path": "/etc/sudoers.d/wheel-nopassword",
        "mode": "0644",
        "user": "root",
        "group": "root",
        "data": "$wheel        ALL=(ALL)       NOPASSWD: ALL"
      }
    ]
  },
  "packages": [
    {
      "name": "bat"
    },
    {
      "name": "buildah"
    },
    {
      "name": "cockpit"
    },
    {
